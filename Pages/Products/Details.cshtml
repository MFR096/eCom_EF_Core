@page
@model eCom_EF_Core.Pages_Products.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Product.Name</h1>

<div class="row">
    <div class="col-md-4">
        <img src="~/@Model.Product.ImgUrl" alt="Product Image" class="img-fluid" />
    </div>
    <div class="col-md-8">
        <h4>Description</h4>
        <p>@Model.Product.Description</p>
        <h4>Category</h4>
        <p>@Model.Product.Category</p>
        <h4>Price</h4>
        <p>$@Model.Product.Price</p>
        <h4>Release Date</h4>
        <p>@Model.Product.ReleaseDate.ToString("yyyy-MM-dd")</p>
        <!-- Add to Cart button -->
        <form method="post">
            <button class="btn btn-success" type="submit" name="action" value="addToCart">Add to Cart</button>
        </form>
        <!-- Edit and Back buttons -->
        <a asp-page="./Edit" asp-route-id="@Model.Product.Id" class="btn btn-primary">Edit</a>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
